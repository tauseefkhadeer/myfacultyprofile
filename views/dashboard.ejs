<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard - School Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Schools</a>
        <div class="d-flex align-items-center gap-3 text-white">
          <% if (sessionUser) { %>
            <span class="small">Logged in as <strong><%= sessionUser.role %></strong></span>
            <form method="post" action="/logout">
              <button class="btn btn-light btn-sm">Logout</button>
            </form>
          <% } %>
        </div>
      </div>
    </nav>

    <div class="container py-4">
      <% if (scope === 'SUPER_ADMIN') { %>
        <h1 class="h4 mb-3">All Schools Overview</h1>
        <div class="row g-3">
          <% schools.forEach(s => { %>
            <div class="col-md-6">
              <div class="card shadow-sm h-100">
                <div class="card-body">
                  <h2 class="h5"><%= s.name %></h2>
                  <p class="mb-1">Faculty: <strong><%= s._count.faculty %></strong></p>
                  <p class="mb-1">Students: <strong><%= s._count.students %></strong></p>
                  <p class="mb-1">Admins: <strong><%= s._count.admins %></strong></p>
                  <p class="mb-1">Subjects: <strong><%= s._count.subjects %></strong></p>
                  <p class="mb-0">Avg Faculty Rating: <strong><%= (mapRatings[String(s.id)] || 'N/A') %></strong></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else if (scope === 'ADMIN') { %>
        <h1 class="h4 mb-3"><%= currentSchool?.name %> Overview</h1>
        <div class="row g-3">
          <div class="col-md-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <p class="mb-1">Faculty</p>
                <h2 class="display-6"><%= counts.faculty %></h2>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <p class="mb-1">Students</p>
                <h2 class="display-6"><%= counts.students %></h2>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <p class="mb-1">Admins</p>
                <h2 class="display-6"><%= counts.admins %></h2>
              </div>
            </div>
          </div>
        </div>
        <div class="row g-3 mt-1">
          <div class="col-md-6">
            <div class="card shadow-sm">
              <div class="card-body">
                <p class="mb-1">Avg Faculty Rating</p>
                <h2 class="display-6"><%= facultyAvg || 'N/A' %></h2>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card shadow-sm">
              <div class="card-body">
                <p class="mb-1">Avg Student Review</p>
                <h2 class="display-6"><%= studentAvg || 'N/A' %></h2>
              </div>
            </div>
          </div>
        </div>
      <% } else if (scope === 'FACULTY') { %>
        <h1 class="h4 mb-3">Your Dashboard</h1>
        <div class="row g-3">
          <div class="col-md-6">
            <div class="card shadow-sm">
              <div class="card-body">
                <p class="mb-1">Assigned Classes</p>
                <ul class="mb-0">
                  <% faculty.assignments.forEach(a => { %>
                    <li>Grade <%= a.classSection.grade %> - <%= a.classSection.section %> â€¢ <%= a.subject.name %></li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card shadow-sm">
              <div class="card-body">
                <p class="mb-1">Assigned Students</p>
                <h2 class="display-6"><%= studentsCount %></h2>
                <p class="mb-1">Average Rating</p>
                <h2 class="display-6"><%= avgRating || 'N/A' %></h2>
              </div>
            </div>
          </div>
        </div>
        <div class="row g-3 mt-1">
          <div class="col-md-6">
            <div class="card shadow-sm">
              <div class="card-body">
                <h2 class="h6">Leave Student Feedback</h2>
                <form method="post" action="/reviews/student/<%= (faculty.assignments[0] ? faculty.assignments[0].classSection.id : 0) %>">
                  <!-- This is a placeholder; actual review forms would be on student pages. -->
                </form>
                <p class="text-muted small mb-0">Add reviews from student profile pages.</p>
              </div>
            </div>
          </div>
        </div>
      <% } else { %>
        <h1 class="h4 mb-3">Student Profile</h1>
        <% const s = (scope === 'STUDENT') ? student : student.student; %>
        <div class="card shadow-sm">
          <div class="card-body">
            <p class="mb-1"><strong>Name:</strong> <%= s.name %></p>
            <p class="mb-1"><strong>Grade:</strong> <%= s.grade %> <strong>Section:</strong> <%= s.section %></p>
            <p class="mb-1"><strong>Roll #:</strong> <%= s.rollNumber %></p>
            <p class="mb-2"><strong>Classes:</strong>
              <% s.enrollments.forEach(e => { %>
                <span class="badge text-bg-secondary me-1">G<%= e.classSection.grade %>-<%= e.classSection.section %></span>
              <% }) %>
            </p>
            <div>
              <strong>Recent Results</strong>
              <ul>
                <% s.termResults.slice(0, 5).forEach(r => { %>
                  <li><%= r.subject.name %>: <%= r.marks ?? '-' %> (<%= r.grade ?? '-' %>)</li>
                <% }) %>
              </ul>
            </div>
            <div class="mt-3">
              <strong>Leave Faculty Feedback</strong>
              <form method="post" action="/reviews/faculty/<%= (s.receivedReviews[0]?.facultyId || (s.enrollments[0] ? s.enrollments[0].classSection.id : 0)) %>">
                <div class="row g-2">
                  <div class="col-3">
                    <input type="number" class="form-control" name="rating" min="1" max="5" placeholder="1-5" />
                  </div>
                  <div class="col-6">
                    <input class="form-control" name="comment" placeholder="Comment" />
                  </div>
                  <div class="col-3">
                    <button class="btn btn-primary w-100">Submit</button>
                  </div>
                </div>
              </form>
              <p class="text-muted small mb-0">Use faculty directory pages to pick exact faculty.</p>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
