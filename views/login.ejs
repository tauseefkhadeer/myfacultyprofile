<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - School Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-primary">
      <div class="container-fluid">
        <span class="navbar-brand">Schools</span>
      </div>
    </nav>

    <div class="container py-5" style="max-width: 480px;">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="h4 mb-3">Sign in</h1>
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>
          <form method="post" action="/login">
            <div class="mb-3">
              <label class="form-label">Email or Mobile</label>
              <input class="form-control" name="identifier" placeholder="you@example.com or 9876543210" required />
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" class="form-control" name="password" required />
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <button class="btn btn-primary" type="submit">Login</button>
              <a href="/reset" class="small">Forgot password?</a>
            </div>
          </form>
        </div>
      </div>
      <p class="text-muted small mt-3">Demo users will be seeded. Default password: Password@123</p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
