<!doctype html>
<html><head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Directory</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <nav class="navbar navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">Admins</a>
      <form method="post" action="/logout">
        <button class="btn btn-light btn-sm">Logout</button>
      </form>
    </div>
  </nav>
  <div class="container py-3">
    <form class="row g-2 mb-3">
      <div class="col-sm-4"><input name="q" value="<%= query.q||'' %>" class="form-control" placeholder="Search name" /></div>
      <div class="col-sm-3"><button class="btn btn-primary w-100">Filter</button></div>
      <div class="col-sm-3"><a class="btn btn-outline-secondary w-100" href="?format=csv">Export CSV</a></div>
    </form>
    <div class="table-responsive">
      <table class="table table-sm table-striped align-middle">
        <thead><tr><th>Name</th><th>Designation</th></tr></thead>
        <tbody>
          <% admins.forEach(a => { %>
            <tr>
              <td><%= a.name %></td>
              <td><%= a.designation %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body></html>
