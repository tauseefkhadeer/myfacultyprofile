<!doctype html>
<html><head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Faculty Directory</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <nav class="navbar navbar-dark bg-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">Faculty</a>
      <form method="post" action="/logout">
        <button class="btn btn-light btn-sm">Logout</button>
      </form>
    </div>
  </nav>
  <div class="container py-3">
    <form class="row g-2 mb-3">
      <div class="col-sm-3"><input name="q" value="<%= query.q||'' %>" class="form-control" placeholder="Search name" /></div>
      <div class="col-sm-3"><input name="subject" value="<%= query.subject||'' %>" class="form-control" placeholder="Subject" /></div>
      <div class="col-sm-2"><input name="grade" value="<%= query.grade||'' %>" class="form-control" placeholder="Grade" /></div>
      <div class="col-sm-2"><button class="btn btn-primary w-100">Filter</button></div>
      <div class="col-sm-2"><a class="btn btn-outline-secondary w-100" href="?format=csv">Export CSV</a></div>
    </form>
    <div class="table-responsive">
      <table class="table table-sm table-striped align-middle">
        <thead><tr><th>Name</th><th>Designation</th><th>Subjects</th><th>Grades</th></tr></thead>
        <tbody>
          <% faculty.forEach(f => { %>
            <tr>
              <td><%= f.name %></td>
              <td><%= f.designation || '-' %></td>
              <td>
                <% f.subjects.forEach(s => { %>
                  <span class="badge text-bg-secondary me-1"><%= s.subject.name %></span>
                <% }) %>
              </td>
              <td>
                <% const grades = [...new Set(f.assignments.map(a => a.classSection.grade))]; %>
                <% grades.forEach(g => { %>
                  <span class="badge text-bg-light border me-1">G<%= g %></span>
                <% }) %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body></html>
